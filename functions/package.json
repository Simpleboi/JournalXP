{
  "name": "functions",
  "type": "commonjs",
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "stop": "firebase emulators:stop",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "es-check": "npx tsc --noEmit",
    "migrate:users": "ts-node src/scripts/migrateUserFields.ts",
    "migrate:normalize": "ts-node src/scripts/normalizeUserSchema.ts",
    "migrate:summaries": "ts-node src/scripts/backfillSummaries.ts",
    "seed:prompts": "ts-node src/scripts/seedCommunityPrompts.ts"
  },
  "engines": {
    "node": "22"
  },
  "main": "dist/functions/src/index.js",
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "firebase-admin": "^13.5.0",
    "firebase-functions": "^6.6.0",
    "openai": "^6.8.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "jest": "^30.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.7.3"
  },
  "private": true
}
